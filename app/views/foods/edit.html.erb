<% provide(:title, "BarCVVR Edition du Plat "+params[:id]) %>

<h3>Modification du Plat</h3>

<br>
<br>

<div class="row">

<%= form_for(@food) do |f| %>
  <% if @food.errors.any? %>
  <div class="row">
    <div class="col s12">
      <div class="card red darken-4">
        <div class="card-content white-text">
          <span class="card-title"><%= pluralize(@food.errors.count, "error") %> prohibited this user from being saved:</span>
          <ul>
          <% @food.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <% end %>

  <div class="input-field col s12">
    <%= f.label :name, 'Nom' %>
    <%= f.text_field :name %>
  </div>

  
  <div class="input-field col s12">
    <%= f.label :price, 'Prix', 'data-error': 'Ce n\'est pas un nombre valide' %>
    <%= f.text_field :price, pattern: '-?[0-9]*(\.[0-9]+)?', step: '0.01' %>
  </div>

  <div class="input-field col s12">
    <%= f.label :admin_password, 'Mot de passe Administrateur' %>
    <%= password_field_tag :admin_password, nil %>
  </div>
  
  <div class="col s12">
    <br>
      <%= check_box("drk", "delete", { class: "" }, "yes", "no") %>
      <label for="drk_delete">Supprimer le plat</label>
  </div>

  <div class="col s12">
    <br/>
    <br/>  
    <br/>
    <button class="btn waves-effect waves-light" type="submit" name="action">Valider
      <i class="material-icons right">send</i>
    </button>
  </div>
<% end %>

</div>

<script>
$(document).ready(function() {
    $('select').material_select();
  });
</script>
